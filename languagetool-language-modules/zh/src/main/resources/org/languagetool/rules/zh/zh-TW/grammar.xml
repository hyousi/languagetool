<rules lang="zh-TW" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <!-- ====================================================================== -->
    <!-- 拼寫： 詞語錯誤 -->
    <!-- ====================================================================== -->
    <category id="TW_CAT2" name="成語錯誤">
        <rule id="ZTWL" name="走頭無路\走投無路">
            <pattern>
                <token>走頭無路</token>
            </pattern>
            <message>您的意思"<suggestion>走投無路</suggestion>"嗎</message>
            <example correction='走投無路'>我實在是被逼得<marker>走投無路</marker>，才出此下策。</example>
        </rule>
    </category>
</rules>